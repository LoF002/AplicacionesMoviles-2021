<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act_registrar_usuarios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="60sp"
            android:paddingBottom="10sp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Registrarse"
                android:textAlignment="center"
                android:textColor="#1382CC"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40sp"
            android:paddingTop="15sp"
            android:paddingRight="40sp"
            android:paddingBottom="15sp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5sp"
                android:text="Usuario:"
                android:textColor="#1E1E1E"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtUser_registrar"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:background="@drawable/custom_txt_field"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40sp"
            android:paddingTop="15sp"
            android:paddingRight="40sp"
            android:paddingBottom="15sp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5sp"
                android:text="Nombre:"
                android:textColor="#1E1E1E"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@drawable/custom_txt_field"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40sp"
            android:paddingTop="15sp"
            android:paddingRight="40sp"
            android:paddingBottom="15sp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5sp"
                android:text="Apellido:"
                android:textColor="#1E1E1E"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtApellidoUsuario"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@drawable/custom_txt_field"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40sp"
            android:paddingTop="15sp"
            android:paddingRight="40sp"
            android:paddingBottom="15sp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5sp"
                android:text="ContraseÃ±a:"
                android:textColor="#1E1E1E"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/txtPassword_registrar"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_weight="1"
                android:background="@drawable/custom_txt_field"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40sp"
            android:paddingTop="15sp"
            android:paddingRight="40sp"
            android:paddingBottom="15sp">

            <Button
                android:id="@+id/btnRegistrarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15sp"
                android:layout_weight="1"
                android:backgroundTint="#13B0CC"
                android:text="Registrar"
                app:cornerRadius="20sp" />

            <Button
                android:id="@+id/btnActualizarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_weight="1"
                android:backgroundTint="#13B0CC"
                android:text="Actualizar"
                app:cornerRadius="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40sp"
            android:paddingTop="15sp"
            android:paddingRight="40sp"
            android:paddingBottom="15sp">

            <Button
                android:id="@+id/btnVerUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#13B0CC"
                android:text="Ver Usuarios"
                app:cornerRadius="20sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>